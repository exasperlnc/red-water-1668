Name: <%=@dish.name%>
Chef: <%=@dish.chef_name%>
Description: <%=@dish.description%>
Total Calories: <%=@dish.total_calories%>
Ingredients: <%@dish.ingredients.each do |ing|%>
              <%=ing.name%>
            <% end %>

            <%=form_with url:"/dish_ingredient", method: :post, local: true do |f|%>
            <%=f.label :ingredient_id %>
            <%=f.text_field :ingredient_id %>
            <%=f.hidden_field :dish_id, value: @dish.id%>
            <%=f.submit "Add Ingredient"%>
            <% end %>